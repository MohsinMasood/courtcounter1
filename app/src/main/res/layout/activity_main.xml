
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.ahmedraza.courtcounter1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:id="@+id/textView"
        android:layout_marginEnd="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 Points"
        android:id="@+id/a3"
        android:layout_alignTop="@+id/b3"
        android:layout_alignParentStart="true"
        android:onClick="add3toa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 Points"
        android:id="@+id/a2"
        android:layout_below="@+id/a3"
        android:layout_alignParentStart="true"
        android:onClick="add2toa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 Points"
        android:id="@+id/a1"
        android:layout_below="@+id/a2"
        android:layout_alignParentStart="true"
        android:onClick="add1toa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 Points"
        android:id="@+id/b3"
        android:layout_below="@+id/sb"
        android:layout_alignStart="@+id/b2"
        android:layout_marginTop="37dp"
        android:onClick="add3tob"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 Points"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/a2"
        android:layout_alignParentEnd="true"
        android:onClick="add2tob"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 Points"
        android:id="@+id/b1"
        android:layout_below="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:onClick="add1tob"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="reset1"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/sa"
        android:layout_alignTop="@+id/sb"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/sb"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>




